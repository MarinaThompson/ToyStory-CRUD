@model ToyStory_CRUD.Models.Personagem

@{
    ViewData["Title"] = "Details";
    var imagem = Model.Foto;
    var imagePath = "/img/" + imagem + ".jpg";

}
<div class="row">
    <div class="col-md-6">
        <div class="quadro_principal_lista">
            <h1 class="text-center">Detalhes do personagem</h1>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tipo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tipo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                @if (!string.IsNullOrEmpty(Model.Fala))
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Fala)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Fala)
                    </dd>
                }
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Foto)
                </dt>
                <dd class="col-sm-10">
                    <img class="card-img-top imagem-detalhe" src="@imagePath" alt="Imagem do Personagem escolhido">
                </dd>
                <dt class="col-sm-2">
                    Cenário
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cenario.Nome)
                </dd>
            </dl>       
            <div>
                <a asp-action="Edit" asp-route-id="@Model.ID">Editar</a> |
                <a asp-action="Index">Voltar para a lista</a>
            </div>
        </div>
    </div>      
    </div>



