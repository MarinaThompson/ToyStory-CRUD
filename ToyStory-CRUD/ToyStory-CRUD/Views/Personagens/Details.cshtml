@model ToyStory_CRUD.Models.Personagem

@{
    ViewData["Title"] = "Details";
    var imagem = Model.Foto;
    var imagePath = "/img/" + imagem + ".jpg";

}
<h1>Detalhes</h1>

<div>
    <h4>Personagem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        @if (!string.IsNullOrEmpty(Model.Fala)) 
        {        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fala)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fala)
        </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            <img class="card-img-top imagem-card" src="@imagePath" alt="Imagem do Personagem escolhido">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cenario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cenario.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
