@model ToyStory_CRUD.Models.Personagem

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Personagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label class="visually-hidden control-label" for="tipo" asp-for="Tipo">Tipo</label>
                <select class="form-control form-select tipo" id="tipo" asp-for="Tipo">
                    <option selected>Escolha...</option>
                    <option value="Humano">Humano</option>
                    <option value="Brinquedo">Brinquedo</option>
                    <option value="Animal">Animal</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="visually-hidden control-label" for="nome" asp-for="Nome">Nome</label>

                <select class="form-control form-select nome" id="nome" asp-for="Nome">
                    <option value="">Nomes</option>
                </select>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="visually-hidden control-label" for="fala" asp-for="Fala">Fala</label>
                <select class="form-control form-select fala" id="fala" asp-for="Fala">
                    <option value="">Falas</option>
                </select>
                <span asp-validation-for="Fala" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="visually-hidden control-label" for="foto">Foto</label>
                <select class="form-control form-select foto" id="foto">
                    <option selected>Escolha...</option>
                    <option value="Foto 1">Foto 1</option>
                    <option value="Foto 2">Foto 2</option>
                    <option value="Foto 3">Foto 3</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4 card">
       <div class="imagemDinamica">
           
       </div>
        <div class="card-body">
            <h4 class="card-title tipoSelecionado text-center"></h4>
            <h5 class="card-title nomeSelecionado text-center"></h5>
            <p class="card-text falaSelecionada text-center"></p>
        </div>
    </div>

</div>
<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
