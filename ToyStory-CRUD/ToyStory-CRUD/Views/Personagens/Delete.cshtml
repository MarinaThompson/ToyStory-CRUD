@model ToyStory_CRUD.Models.Personagem

@{
    ViewData["Title"] = "Delete";
    var imagem = Model.Foto;
    var imagePath = "/img/" + imagem + ".jpg";
}

<h1>Excluir</h1>

<h3>Tem certeza que você deseja excluir este personagem?</h3>
<div>
    <h4>Personagem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        @if (!string.IsNullOrEmpty(Model.Fala)) 
        {        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fala)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fala)
        </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            <img class="card-img-top imagem-card" src="@imagePath" alt="Imagem do Personagem escolhido">        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cenario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cenario.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>
